generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "mysql", "sqlite", conforme seu banco
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String
  password  String
  bloodType String?
  phone     String?
  cpf       String?    @unique
  donations Donation[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([email])
}

model Donation {
  id           Int       @id @default(autoincrement())
  userId       Int
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  donationDate DateTime
  hemocentro   String
  observacoes  String?   @db.Text
  status       String    @default("pendente") // "pendente", "confirmada", "rejeitada"
  pointsEarned Int       @default(0)
  locationId   Int?
  location     Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([userId])
  @@index([donationDate])
  @@index([status])
}

model Location {
  id        Int        @id @default(autoincrement())
  name      String
  address   String
  city      String?
  state     String?
  zipCode   String?
  phone     String?
  latitude  Float?
  longitude Float?
  donations Donation[]
  campaigns Campaign[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([city])
  @@index([state])
}

model Campaign {
  id          Int       @id @default(autoincrement())
  title       String
  description String    @db.Text
  startDate   DateTime
  endDate     DateTime
  locationId  Int?
  location    Location? @relation(fields: [locationId], references: [id], onDelete: SetNull)
  bloodType   String?
  goal        Int?      // Meta de doações
  current     Int       @default(0) // Doações atuais
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([locationId])
  @@index([startDate])
  @@index([endDate])
  @@index([isActive])
}

