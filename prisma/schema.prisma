generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String    @id @default(uuid())
  cpf               String    @unique
  nome              String
  email             String    @unique
  password          String    // Hash bcrypt
  phone             String?
  birthDate         DateTime?
  bloodType         String?
  weight            Float?
  endereco          String?
  genero            String?   // (M, F, Outro)
  foto              String?   // (URL da foto)
  capibas           Int       @default(0)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  donations         Donation[]
  agendamentos      Agendamento[]
  quizAttempts      UserQuizAttempt[]
}

model PontoColeta {
  id                String    @id @default(uuid())
  nome              String
  email             String?
  telefone          String?
  endereco          String
  latitude          Float?
  longitude         Float?
  linkMaps          String?
  horarioAbertura   String?   // (Ex: "08:00")
  horarioFechamento String?   // (Ex: "18:00")
  tipo              String    @default("fixed") // 'fixed', 'event'
  eventStartDate    DateTime?
  eventEndDate      DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  agendamentos      Agendamento[]
  donations         Donation[]
}

model Agendamento {
  id                String    @id @default(uuid())
  usuarioId         String
  pontoColetaId     String
  dataAgendamento   DateTime
  status            String    @default("pendente") // 'pendente', 'confirmado', 'cancelado', 'realizado'
  dataCriacao       DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  usuario           User      @relation(fields: [usuarioId], references: [id])
  pontoColeta       PontoColeta @relation(fields: [pontoColetaId], references: [id])
  
  @@unique([usuarioId, dataAgendamento, pontoColetaId]) // Evita duplicatas
}

model Donation {
  id                String    @id @default(uuid())
  userId            String
  pontoColetaId     String
  user              User      @relation(fields: [userId], references: [id])
  pontoColeta       PontoColeta @relation(fields: [pontoColetaId], references: [id])
  donationDate      DateTime
  status            String    @default("pending") // 'pending', 'confirmed', 'rejected'
  pointsEarned      Int       @default(0)
  validatedByQR     Boolean   @default(false)
  createdAt         DateTime  @default(now())
}

// Modelos para o Quiz
model Quiz {
  id                String    @id @default(uuid())
  title             String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  questions         Question[]
  attempts          UserQuizAttempt[]
}

model Question {
  id                String    @id @default(uuid())
  quizId            String
  quiz              Quiz      @relation(fields: [quizId], references: [id])
  text              String
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  answers           Answer[]
}

model Answer {
  id                String    @id @default(uuid())
  questionId        String
  question          Question  @relation(fields: [questionId], references: [id])
  text              String
  isCorrect         Boolean
  explanation       String?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model UserQuizAttempt {
  id                String    @id @default(uuid())
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  quizId            String
  quiz              Quiz      @relation(fields: [quizId], references: [id])
  score             Int
  completedAt       DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}
